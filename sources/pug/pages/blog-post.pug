				li
					+box-comment({
						imgName: 'user-1-86x86',
						name: 'Kate Wilson',
						time: 'October 5, 2019 at 1:44 pm',
						exeption: 'Sit amet massa vitae tortor condimentum lacinia quis vel eros. Dignissim sodales ut eu sem. Vitae et leo duis ut. Ultrices eros in cursus turpis. Ipsum dolor sit amet consectetur adipiscing elit pellentesque. Feugiat in ante metus dictum at tempor commodo ullamcorper.'
					})

	section.section.section-md.bg-default
		.container
			h6 Post a Comment
			p Your email address will not be published. Required fields are marked *
			form.rd-form.rd-mailform.form-boxed
				.row.row-50
					.col-lg-4
						.form-wrap.form-wrap-icon
							.form-icon.mdi.mdi-account-outline
							input#contact-name.form-input(type='text' name='name' data-constraints='@Required')
							label.form-label(for='contact-name') Name

					.col-lg-4
						.form-wrap.form-wrap-icon
							.form-icon.mdi.mdi-email-outline
							input#contact-email.form-input(type='email' name='email' data-constraints='@Email @Required')
							label.form-label(for='contact-email') E-mail

					.col-lg-4
						.form-wrap.form-wrap-icon
							.form-icon.mdi.mdi-phone
							input#contact-phone.form-input(type='text' name='phone' data-constraints='@Numeric')
							label.form-label(for='contact-phone') Phone

					.col-12
						.form-wrap.form-wrap-icon
							.form-icon.mdi.mdi-message-outline
							label.form-label(for='contact-message') Message
							textarea#contact-message.form-input(name='message' data-constraints='@Required')

					.col-md-12
						button.button.button-default(type='submit') Submit


	// Page Footer
	include ../sections/_footer-dark
