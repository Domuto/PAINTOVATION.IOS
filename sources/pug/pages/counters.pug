extends  ../_skeleton

//- Includes
include ../components/_ui-progress-bar-linear
include ../components/_ui-counter

block variables
	- var activeCategory = 'pages'
	- var pageName = 'Counters'

block page  
	// Page Header
	include ../sections/_header-wide

	+breadcrumbs({
		title: pageName,
		subtitle: 'Lots of customization options',
		bgImage: 'breadcrumbs-bg-6.jpg'
	})

	// Counters
	section.section.section-md.bg-gray-700.context-dark.text-center
		.container
			h4 Counters #1
			.row.row-30
				.col-12.col-sm-6.col-lg-3
					// Box counter
					+counter-boxed({
						value: '10',
						postfix: '+',
						title: 'International awards'
					})

				.col-12.col-sm-6.col-lg-3
					// Box counter
					+counter-boxed({
						value: '57',
						title: 'Finished projects'
					})

				.col-12.col-sm-6.col-lg-3
					// Box counter
					+counter-boxed({
						value: '19',
						postfix: '+',
						title: 'Years of experience'
					})

				.col-12.col-sm-6.col-lg-3
					// Box counter
					+counter-boxed({
						value: '24',
						title: 'Professionals in team'
					})

	// Counters
	section.section.section-md.bg-default.text-center
		.container
			h4 Counters #2
			.row.row-30
				.col-12.col-sm-6.col-lg-3
					// Box counter
					+counter-boxed({
						value: '10',
						icon: 'linearicons-trophy2',
						title: 'International awards'
					})

				.col-12.col-sm-6.col-lg-3
					// Box counter
					+counter-boxed({
						value: '57',
						icon: 'linearicons-power',
						title: 'Finished projects'
					})

				.col-12.col-sm-6.col-lg-3
					// Box counter
					+counter-boxed({
						value: '19',
						icon: 'linearicons-flag',
						title: 'Years of experience'
					})

				.col-12.col-sm-6.col-lg-3
					// Box counter
					+counter-boxed({
						value: '24',
						icon: 'linearicons-mustache-glasses',
						title: 'Professionals in team'
					})

	// Page Footer
	include ../sections/_footer-dark
